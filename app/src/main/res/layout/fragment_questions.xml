<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CCCACA">

    <TextView
        android:id="@+id/textViewQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/greenAccent"
        android:textSize="18sp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="90dp"
        android:text="What is the capital of France?"
        android:gravity="center"
        android:fontFamily="@font/merriweathersans_semibold"
        android:background="@drawable/question_board"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="140dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="ltr"
        android:gravity="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuestion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioButtonOption1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="textStart"
            android:paddingStart="12dp"
            android:paddingEnd="20dp"
            android:background="@drawable/white_background"
            android:layout_marginBottom="12dp"
            android:text="Option 1" />

        <RadioButton
            android:id="@+id/radioButtonOption2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="textStart"
            android:background="@drawable/white_background"
            android:paddingStart="12dp"
            android:layout_marginBottom="12dp"
            android:paddingEnd="20dp"
            android:text="Option 2" />

        <RadioButton
            android:id="@+id/radioButtonOption3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingStart="12dp"
            android:textAlignment="textStart"
            android:paddingEnd="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/white_background"
            android:text="Option 3" />

        <RadioButton
            android:id="@+id/radioButtonOption4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textAlignment="textStart"
            android:paddingStart="12dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/white_background"
            android:text="Option 4" />

        <!-- Add more radio buttons as needed -->

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>